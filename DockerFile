# Base PHP image
FROM php:8.3-fpm

# Set working directory
WORKDIR /var/www/html

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git unzip curl libzip-dev zip npm libpng-dev libjpeg-dev libfreetype6-dev libonig-dev \
    libicu-dev pkg-config libpq-dev \
    && docker-php-ext-install pdo_mysql pdo_pgsql zip intl gd \
    && apt-get clean

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copy application files
COPY . .

# Install PHP dependencies
RUN composer install --no-dev --optimize-autoloader

# Install Node dependencies
RUN npm ci

# Build production frontend assets
RUN npm run build

# Cache Laravel config, routes, views
RUN php artisan config:cache
RUN php artisan route:cache
RUN php artisan view:cache
RUN php artisan cache:clear

# Expose port for Laravel
EXPOSE 8080

# Entrypoint: Serve Laravel in production
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8080"]
