# Base PHP image
FROM php:8.3-fpm

# Set working directory
WORKDIR /var/www/html

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git unzip curl libzip-dev zip npm libpng-dev libjpeg-dev libfreetype6-dev libonig-dev \
    libicu-dev pkg-config libpq-dev \
    && docker-php-ext-install pdo_mysql pdo_pgsql zip intl gd \
    && apt-get clean

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copy project files
COPY . .

# Install PHP dependencies
RUN composer install --no-dev --optimize-autoloader

# Install Node dependencies
RUN npm ci

# Build frontend assets (for production)
RUN npm run build

# Clear Laravel caches
RUN php artisan config:clear || true
RUN php artisan route:clear || true
RUN php artisan view:clear || true
RUN php artisan cache:clear || true

# Expose ports for PHP and Vite (dev server)
EXPOSE 8080 5173

# Entry point: can run in dev or prod
# DEV: php artisan serve + vite dev
# PROD: only php artisan serve (after npm run build)
CMD ["sh", "-c", "\
    if [ \"$APP_ENV\" = 'production' ]; then \
        php artisan serve --host=0.0.0.0 --port=8080; \
    else \
        php artisan serve --host=0.0.0.0 --port=8080 & \
        npm run dev -- --host; \
    fi \
"]
